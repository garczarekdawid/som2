@model List<SOM2.Application.DTO.HostActionListDto>
@using SOM2.Domain.Enums

<h2>Historia Akcji Hostów</h2>

<table class="table table-striped table-bordered table-hover">
    <thead class="table-light">
        <tr>
            <th class="text-monospace">ID</th>
            <th>Host</th>
            <th>Akcja</th>
            <th>Status</th>
            <th>Utworzono</th>
            <th>Rozpoczęto</th>
            <th>Zakończono</th>
            <th>Detale</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var rowClass = item.Status switch
            {
                HostActionStatus.Failed => "table-danger",
                HostActionStatus.Cancelled => "table-warning",
                _ => ""
            };

            <tr class="@rowClass">
                <td class="text-monospace" title="@item.Id">@item.Id.ToString().Substring(0, 8)</td>
                <td>@item.HostName</td>
                <td>@item.Action</td>
                <td>
                    @switch (item.Status)
                    {
                        case HostActionStatus.Pending:
                            <span class="badge bg-secondary">Pending</span>
                            ;
                            break;
                        case HostActionStatus.Running:
                            <span class="badge bg-info">Running</span>
                            ;
                            break;
                        case HostActionStatus.Success:
                            <span class="badge bg-success">Success</span>
                            ;
                            break;
                        case HostActionStatus.Failed:
                            <span class="badge bg-danger">Failed</span>
                            ;
                            break;
                        case HostActionStatus.Cancelled:
                            <span class="badge bg-warning">Cancelled</span>
                            ;
                            break;
                        default:
                            <span class="badge bg-light text-dark">–</span>
                            ;
                            break;
                    }
                </td>
                <td class="text-monospace">@item.CreatedAt.ToLocalTime()</td>
                <td class="text-monospace">@item.StartedAt?.ToLocalTime()</td>
                <td class="text-monospace">@item.FinishedAt?.ToLocalTime()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Szczegóły</a>
                </td>
            </tr>
        }
    </tbody>
</table>
