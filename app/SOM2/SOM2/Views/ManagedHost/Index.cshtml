@model SOM2.Web.Models.ManagedHost.ManagedHostIndexViewModel

<h1>Managed Hosts</h1>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>IP Address</th>
            <th>MAC Address</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var host in Model.Hosts)
        {
            <tr>
                <td>@host.Name</td>
                <td>@host.IpAddress</td>
                <td>@host.MacAddress</td>
                <td>@host.Description</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@host.Id" class="btn btn-sm btn-primary">Edit</a>
                    <button type="button" class="btn btn-sm btn-danger"
                            data-bs-toggle="modal"
                            data-bs-target="#deleteModal"
                            data-host-id="@host.Id"
                            data-host-name="@host.Name">
                        Delete
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success mb-3">Add New Host</a>

<div class="d-flex justify-content-between align-items-center mb-3 flex-wrap">

    <!-- Lewy: PageSize -->
    <form method="get" class="d-flex align-items-center mb-0">
        <label for="pageSize" class="me-2 mb-0">Show:</label>
        @Html.DropDownListFor(
        m => m.PageSize,
                new SelectList(Model.PageSizes, Model.PageSize),
                htmlAttributes: new { @class = "form-select me-2", style = "width:auto;", onchange = "this.form.submit()" }
                )
        <input type="hidden" name="page" value="1" />
    </form>

    <!-- Środek: numery stron -->
    <nav aria-label="Page navigation" class="mb-0">
        <ul class="pagination mb-0">
            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)" asp-route-pageSize="@Model.PageSize">&laquo;</a>
            </li>

            @{
                int startPage = Math.Max(1, Model.CurrentPage - 2);
                int endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);

                if (startPage > 1)
                {
                    <li class="page-item"><a class="page-link" asp-action="Index" asp-route-page="1" asp-route-pageSize="@Model.PageSize">1</a></li>
                    if (startPage > 2)
                    {
                        <li class="page-item disabled"><span class="page-link">...</span></li>
                    }
                }

                for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-pageSize="@Model.PageSize">@i</a>
                    </li>
                }

                if (endPage < Model.TotalPages)
                {
                    if (endPage < Model.TotalPages - 1)
                    {
                        <li class="page-item disabled"><span class="page-link">...</span></li>
                    }
                    <li class="page-item"><a class="page-link" asp-action="Index" asp-route-page="@Model.TotalPages" asp-route-pageSize="@Model.PageSize">@Model.TotalPages</a></li>
                }
            }

            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)" asp-route-pageSize="@Model.PageSize">&raquo;</a>
            </li>
        </ul>
    </nav>

    <!-- Prawy: Go to page -->
    <form method="get" class="d-flex align-items-center mb-0">
        <label for="gotoPage" class="me-2 mb-0">Go to page:</label>
        <input type="number" min="1" max="@Model.TotalPages" name="page" id="gotoPage" class="form-control me-2" style="width:80px;" value="@Model.CurrentPage" />
        <input type="hidden" name="pageSize" value="@Model.PageSize" />
        <button type="submit" class="btn btn-primary btn-sm">Go</button>
    </form>

</div>

<!-- Modal Delete -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="deleteForm" method="post" asp-action="DeleteConfirmed">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Czy na pewno chcesz usunąć <strong id="hostName"></strong>?
                </div>
                <div class="modal-footer">
                    <input type="hidden" name="id" id="hostId" value="" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Nie</button>
                    <button type="submit" class="btn btn-danger">Tak</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var deleteModal = document.getElementById('deleteModal')
        deleteModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget
            var hostId = button.getAttribute('data-host-id')
            var hostName = button.getAttribute('data-host-name')

            var modalHostName = deleteModal.querySelector('#hostName')
            var modalHostId = deleteModal.querySelector('#hostId')

            modalHostName.textContent = hostName
            modalHostId.value = hostId
        })
    </script>
}