@model IEnumerable<SOM2.Web.Models.ManagedHost.ManagedHostIndexViewModel>

<h1>Managed Hosts</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>IP Address</th>
            <th>MAC Address</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var host in Model)
        {
            <tr>
                <td>@host.Name</td>
                <td>@host.IpAddress</td>
                <td>@host.MacAddress</td>
                <td>@host.Description</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@host.Id" class="btn btn-sm btn-primary">Edit</a>

                    <button type="button" class="btn btn-sm btn-danger"
                            data-bs-toggle="modal"
                            data-bs-target="#deleteModal"
                            data-host-id="@host.Id"
                            data-host-name="@host.Name">
                        Delete
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Add New Host</a>

<!-- Modal Bootstrap -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="deleteForm" method="post" asp-action="DeleteConfirmed">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Czy na pewno chcesz usunąć <strong id="hostName"></strong>?
                </div>
                <div class="modal-footer">
                    <input type="hidden" name="id" id="hostId" value="" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Nie</button>
                    <button type="submit" class="btn btn-danger">Tak</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var deleteModal = document.getElementById('deleteModal')
        deleteModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget
            var hostId = button.getAttribute('data-host-id')
            var hostName = button.getAttribute('data-host-name')

            var modalHostName = deleteModal.querySelector('#hostName')
            var modalHostId = deleteModal.querySelector('#hostId')

            modalHostName.textContent = hostName
            modalHostId.value = hostId
        })
    </script>
}
